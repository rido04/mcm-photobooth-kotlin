<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!-- Camera Preview (kiri, 60%) -->
    <SurfaceView
        android:id="@+id/surfaceCamera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toStartOf="@id/rightPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.58" />

    <!-- Countdown overlay -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="120sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toStartOf="@id/rightPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Right Panel (kanan, 42%) -->
    <LinearLayout
        android:id="@+id/rightPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#16213E"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/surfaceCamera"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Grid count selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Foto"
            android:textColor="#AAAAAA"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button android:id="@+id/btnGrid1"
                android:layout_width="0dp" android:layout_height="40dp"
                android:layout_weight="1" android:text="1"
                android:textSize="14sp" android:layout_marginEnd="4dp"
                android:backgroundTint="#7C3AED"/>
            <Button android:id="@+id/btnGrid2"
                android:layout_width="0dp" android:layout_height="40dp"
                android:layout_weight="1" android:text="2"
                android:textSize="14sp" android:layout_marginEnd="4dp"
                android:backgroundTint="#7C3AED"/>
            <Button android:id="@+id/btnGrid3"
                android:layout_width="0dp" android:layout_height="40dp"
                android:layout_weight="1" android:text="3"
                android:textSize="14sp" android:layout_marginEnd="4dp"
                android:backgroundTint="#7C3AED"/>
            <Button android:id="@+id/btnGrid4"
                android:layout_width="0dp" android:layout_height="40dp"
                android:layout_weight="1" android:text="4"
                android:textSize="14sp"
                android:backgroundTint="#7C3AED"/>
        </LinearLayout>

        <!-- Grid info -->
        <TextView
            android:id="@+id/tvGridInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto 0 / 2"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <!-- Photo slots 2x2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="12dp">

            <ImageView android:id="@+id/imgSlot1"
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1"
                android:scaleType="centerCrop" android:layout_margin="4dp"
                android:background="#2A2A4A" android:visibility="visible"/>
            <ImageView android:id="@+id/imgSlot2"
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1"
                android:scaleType="centerCrop" android:layout_margin="4dp"
                android:background="#2A2A4A" android:visibility="visible"/>
            <ImageView android:id="@+id/imgSlot3"
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1"
                android:scaleType="centerCrop" android:layout_margin="4dp"
                android:background="#2A2A4A" android:visibility="gone"/>
            <ImageView android:id="@+id/imgSlot4"
                android:layout_width="0dp" android:layout_height="0dp"
                android:layout_columnWeight="1" android:layout_rowWeight="1"
                android:scaleType="centerCrop" android:layout_margin="4dp"
                android:background="#2A2A4A" android:visibility="gone"/>
        </GridLayout>

        <!-- Action buttons -->
        <Button
            android:id="@+id/btnCapture"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“¸ CAPTURE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#7C3AED"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button android:id="@+id/btnRetake"
                android:layout_width="0dp" android:layout_height="44dp"
                android:layout_weight="1" android:text="â†© Retake"
                android:textSize="13sp" android:layout_marginEnd="6dp"
                android:backgroundTint="#F59E0B" android:enabled="false"/>
            <Button android:id="@+id/btnNext"
                android:layout_width="0dp" android:layout_height="44dp"
                android:layout_weight="1" android:text="OK âœ“"
                android:textSize="13sp"
                android:backgroundTint="#10B981" android:enabled="false"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom status bar -->
    <TextView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:background="#0F0F1A"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="Colokkan USB webcam untuk memulai"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>