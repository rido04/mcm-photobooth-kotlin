<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!-- Preview foto (kiri 75%) -->
    <FrameLayout
        android:id="@+id/frameStickers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomActions"
        app:layout_constraintEnd_toStartOf="@id/stickerPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="#000000" />
    </FrameLayout>

    <!-- Sticker panel (kanan 25%) -->
    <LinearLayout
        android:id="@+id/stickerPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#16213E"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomActions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/frameStickers"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.22">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¨ Sticker"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#2A2A4A"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStickers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih sticker lalu tap foto"
            android:textColor="#AAAAAA"
            android:textSize="11sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Bottom action bar -->
    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#0F0F1A"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="â† Ulang"
            android:textSize="14sp"
            android:backgroundTint="#6B7280"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ðŸ’¾ Simpan"
            android:textSize="14sp"
            android:backgroundTint="#10B981"
            android:enabled="false"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnPrint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ðŸ–¨ï¸ Print"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#7C3AED"
            android:enabled="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>